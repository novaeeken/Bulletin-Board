
//- OVERLAY MODAL DELETE
div#delete.modal.fade(tabindex="-1" role="dialog" aria-hidden="true")
	div.modal-dialog(role="document")
		div.modal-content
			div.modal-header
				h4.modal-title Delete contribution
				button(type="button" class="close" data-dismiss="modal" aria-label="close")
					span(aria-hidden="true") &times;
			div.modal-body
				p Are you sure you want to delete this contribution?
			div.modal-footer
				button#buttonDelete.btn.btn-primary.orange(type="button" data-dismiss="modal") Delete
				button.btn.btn-secondary(type="button" data-dismiss="modal") Cancel